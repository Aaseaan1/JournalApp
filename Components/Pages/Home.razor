@page "/"
@using JournalApp.Models
@using JournalApp.Services
@rendermode InteractiveServer

@inject JournalService JournalService
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>Journal - Home</PageTitle>

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-md-6">
            <h1 class="display-5"><strong>My Journal</strong></h1>
            <p class="lead text-muted">Write and reflect on your thoughts</p>
        </div>
        <div class="col-md-6 text-md-end">
            <button class="btn btn-primary btn-lg" @onclick="CreateEntry">
                âœš New Entry
            </button>
        </div>
    </div>

    @if (entries == null)
    {
        <div class="alert alert-info">Loading entries...</div>
    }
    else if (entries.Count == 0)
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">No entries yet</h4>
            <p>Start journaling by creating your first entry!</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var entry in entries)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title">@entry.Title</h5>
                                <span class="badge bg-info">@entry.PrimaryMood</span>
                            </div>
                            <p class="card-text text-truncate">@entry.Content</p>
                            <small class="text-muted">
                                @entry.EntryDate.ToString("MMM dd, yyyy")
                                @if (entry.ModifiedDate.HasValue)
                                {
                                    <span>(Edited)</span>
                                }
                            </small>
                            @if (!string.IsNullOrEmpty(entry.Tags))
                            {
                                <div class="mt-2">
                                    @foreach (var tag in entry.Tags.Split(','))
                                    {
                                        <span class="badge bg-secondary">@tag.Trim()</span>
                                    }
                                </div>
                            }
                        </div>
                        <div class="card-footer bg-transparent">
                            <button class="btn btn-sm btn-outline-primary" 
                                    @onclick="() => ViewEntry(entry.Id)">
                                View
                            </button>
                            <button class="btn btn-sm btn-outline-warning" 
                                    @onclick="() => EditEntry(entry.Id)">
                                Edit
                            </button>
                            <button class="btn btn-sm btn-outline-danger" 
                                    @onclick="() => DeleteEntry(entry.Id)">
                                Delete
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<JournalEntry>? entries;

    protected override async Task OnInitializedAsync()
    {
        entries = await JournalService.GetAllEntriesAsync();
    }

    private void CreateEntry()
    {
        Navigation.NavigateTo("/create");
    }

    private void ViewEntry(int id)
    {
        Navigation.NavigateTo("/view/" + id);
    }

    private void EditEntry(int id)
    {
        Navigation.NavigateTo("/edit/" + id);
    }

    private async Task DeleteEntry(int id)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this entry?");
        if (confirmed)
        {
            await JournalService.DeleteEntryAsync(id);
            entries = await JournalService.GetAllEntriesAsync();
        }
    }
}
